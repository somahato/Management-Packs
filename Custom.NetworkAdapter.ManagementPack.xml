# Discovery Script section - Discovery scripts get this
#=================================================================================
# Load SCOM Discovery module
$DiscoveryData = $momapi.CreateDiscoveryData(0, $SourceId, $ManagedEntityId)
$Count = 0
#=================================================================================	


# Begin MAIN script section
#=================================================================================
# Test to see if folder exists
$Adapters = Get-WmiObject -Query "Select * from WIn32_NetworkAdapter Where NetEnabled = '$True'"

foreach ($Adapter in $Adapters)
{
    $MACAddress = $Adapter.MACAddress
    $Name = $Adapter.Name
	$NetEnabled = $Adapter.NetEnabled
	$instance = $DiscoveryData.CreateClassInstance("$MPElement[Name='Custom.NetworkAdapter.Enabled.Class']$")
	$instance.AddProperty("$MPElement[Name='Windows!Microsoft.Windows.Computer']/PrincipalName$", $ComputerName)
$instance.AddProperty("$MPElement[Name='Custom.NetworkAdapter.Enabled.Class']/DeviceID$", $Adapter.DeviceID)
	$instance.AddProperty("$MPElement[Name='Custom.NetworkAdapter.Enabled.Class']/MACAddress$", $Adapter.MACAddress)
    $instance.AddProperty("$MPElement[Name='Custom.NetworkAdapter.Enabled.Class']/AdapterName$", $Adapter.Name)
    $instance.AddProperty("$MPElement[Name='Custom.NetworkAdapter.Enabled.Class']/NetEnabled$", $Adapter.NetEnabled)	
	$instance.AddProperty("$MPElement[Name='Custom.NetworkAdapter.Enabled.Class']/NetConnectionID$", $Adapter.NetConnectionID)
	$instance.AddProperty("$MPElement[Name='System!System.Entity']/DisplayName$", $Adapter.NetConnectionID)
	$DiscoveryData.AddInstance($instance)
}

$Message="Discovery of Custom.NetworkAdapter.Enabled.Class has been finished, Discovered $($count) records; `n"
